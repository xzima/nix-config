{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboardApproval": true,
  "assigneesFromCodeOwners": true,
  "semanticCommits": "enabled",
  "semanticCommitType": "build",
  "semanticCommitScope": "deps",
  "labels": [
    "dependencies"
  ],
  "baseBranchPatterns": [
    "stable"
  ],
  "nix": {
    "enabled": true,
    "digest": {"enabled": false}
  },
  "packageRules": [
    {
      "semanticCommitType": "build",
      "matchPackageNames": ["*"],
      "minimumReleaseAge": "5 days"
    },
    {
      "matchManagers": ["nix"],
      "matchPackageNames": ["*"],
      "versioning": "nixpkgs"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["photoprism/photoprism"],
      "versioning": "regex:^(?<major>\\d{2})(?<minor>\\d{2})(?<patch>\\d{2})$"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ghcr.io/hotio/whisparr"],
      "versioning": "regex:^(v\\d+)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.(?<build>\\d+)$"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)(?:docker-)?compose[^/]*\\.ya?ml$/"],
      "matchStrings": ["\\s+DOCKER_MODS:\\s+(?<packageName>.*):(?<currentValue>.*)\\n"],
      "datasourceTemplate": "docker"
    }
  ]
}
